generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:likki@8585@localhost:3306/QRender"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  qrcodes   QRCode[]
}

model QRCode {
  id        String   @id @default(cuid())
  userId    String
  type      String
  text      String
  color     String
  size      Int
  frame     String?
  logoUrl   String?
  shape     String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}
